{
  "name": "Argent x Starknet Wallet",
  "description": "The power of Starknet in a nice wallet interface made by Argent",
  "version": "1.0",
  "manifest_version": 3,
  "action": {
    "default_popup": "index.html",
    "default_title": "Open wallet"
  },
  "permissions": ["downloads", "activeTab", "webRequest"],
  "icons": {
    "16": "assets/logo.png",
    "48": "assets/logo.png",
    "128": "assets/logo.png"
  },
  "content_scripts": [
    {
      "matches": ["file://*/*", "http://*/*", "https://*/*"],
      "js": ["inject.js"],
      "run_at": "document_start",
      "all_frames": true
    }
  ],
  "web_accessible_resources": [
    {
      "resources": ["inpage.js"],
      "matches": ["file://*/*", "http://*/*", "https://*/*"]
    }
  ]
}
